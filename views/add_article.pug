extends layout

block content
    h1 #{title}

    form(method='POST',action='/articles/add')
        div#form-group
            label Title:
            input.form-control(type="text", name="title")
        div#form-group
            label Author:
            input.form-control(type="text", name="author")
        div#form-group
            label Body:
            textarea.form-control(name="body")
        br
        input.btn.btn-primary(type="submit",value="submit")